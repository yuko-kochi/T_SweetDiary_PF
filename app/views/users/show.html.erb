<!--プロフィール-->
<%= attachment_image_tag @user, :profile_image, format: 'jpg', size: "100x100", fallback: "no-image.png" %>
<%= @user.name %>
<%= @user.introduction %>
<% if @user.id == current_user.id %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
<% end %>

<%= link_to user_followings_path(@user) do %>
  フォロー数:<%= @user.followings.count %>
<% end %>

<%= link_to user_followers_path(@user) do %>
  フォロワー数：<%= @user.followers.count %>
<% end %>

<% unless current_user == @user %>
  <% if current_user.following?(@user) %>
    <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(@user.id), method: :post %>
  <% end %>
<% end %>

<!--投稿一覧-->
<% @posts.each do |post| %>
  <div>
    <%= link_to post_path(post.id) do %>
      <%= attachment_image_tag post, :image, format: 'jpg', size: "100x100"  %>
    <% end %>
    <p>説明：<%= post.introduction %></p>
  </div>
<% end %>