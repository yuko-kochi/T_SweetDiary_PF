<!--プロフィール-->
<%= attachment_image_tag @user, :profile_image, format: 'jpg', size: "100x100", fallback: "no-image.png" %>
<%= @user.name %>
<%= @user.introduction %>
<% if @user.id == current_user.id %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <p><%= link_to "カレンダー", user_calendar_path(@user) %></p>
<% end %>

<!--フォロー機能-->
<div id="relationship_<%= @user.id %>">
  <%= render partial: "relationships/relationships", locals: { user: @user } %>
</div>


<!--投稿一覧-->
<% @posts.each do |post| %>
  <div>
    <%= link_to post_path(post.id) do %>
      <%= attachment_image_tag post, :image, format: 'jpg', size: "100x100"  %>
    <% end %>
    <p>説明：<%= post.introduction %></p>
  </div>
<% end %>


