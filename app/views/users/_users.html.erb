<% users.each do |user| %>
  <div class="user-index__card">
    <%= link_to user_path(user.id) do %>
      <%= attachment_image_tag( user, :profile_image, size: "200x200", fallback: "no_image.jpeg", class: "profile-image" ) %>
    <% end %>
    <div class="user-index__card--info">
      <p class="user-index__card--name">
        <%= user.name %>
      </p>
      <p class="user-index__card--introduction">
        <%= user.introduction %>
      </p>
    </div>
    <div id="relationship_<%= user.id %>">
      <%= render partial: "relationships/relationships", locals: { user: user } %>
    </div>
  </div>
<% end %>