<h2>新規投稿</h2>
<%= form_with model: @post, local: true do |f| %>
  <div class="actions">
    <%= f.label :image, "画像を登録" %>
    <%= f.attachment_field :image %><br />
    <%= f.label :introduction,"内容" %>
    <%= f.text_area :introduction %><br />
    <%= f.label :category_id,"カテゴリー" %>
    <%= f.collection_select(:category_id, Category.all, :id, :name, {}, ) %><br />
    <%= f.label"タグ" %><br />
    <%= f.text_field :tag_ids,class: "form-control", id:'tag_ids',\
    placeholder: "タグをつける。複数つけるには','で区切ってください。" %>
    <%= f.label :start_time %>
    <%= f.date_field :start_time %><br />
    <%= f.label :address,"住所" %>
    <%= f.text_field :address, id: "address" %><br />
    <input type="button" value="検索" onclick="codeAddress()">
    <div id='map'></div>
    <%= f.submit %>
  </div>
<% end %>

