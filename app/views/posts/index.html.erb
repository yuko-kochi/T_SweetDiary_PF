  カテゴリー検索
  <% @category.each do |category| %>
    <%= link_to category.name, search_path('search[value]': category.id, 'search[how]': "match_category") %>
  <% end %><br />

タグ検索
<% @tag_list.each do |tag| %>
    <%=link_to "#{tag.name}", search_path('search[value]': tag.id, 'search[how]': "match_tag")  %>
    <%="(#{tag.posts.count})" %>
<% end %>






<% @posts.each do |post| %>
<div>
  <%= link_to post_path(post.id) do %>
    <%= attachment_image_tag post, :image, format: 'jpg', size: "100x100"  %>
  <% end %>
  <p>説明：<%= post.introduction %></p>
</div>
<% end %>

