<div class="main-post">
  <div class="main-post-row">

    <% if @posts.empty? %>
      <div class="no_post">
        <p>検索結果は０件です</p>
      </div>

    <% else %>
      <div class="post-index">
        <div class="post-index__title">
          <%= @tag.name %> 一覧<span class="count_body"> (全 <%="#{@posts.count}" %> 件)</span>
        </div>
        <div class="post-index__posts">
          <%= render 'posts/index', posts: @posts %>
        </div>
      </div>
    <% end %>

    <div class="side-var">
      <%= render 'posts/side-var', category: @category, tag_list: @tag_list %>
    </div>

  </div>
</div>
