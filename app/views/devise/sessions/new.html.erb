<div class="signin">
  <div class="signin-header">
    <div class="signin-header__title">
      <h2> Log In</h2>
    </div>
  </div>

  <div class="form-body">
    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
      <% if alert %>
        <p class="alert alert-error"><%= alert %></p>
      <% end %>
      <%= flash[:error] %>
      <div class="form-body__field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: 'sign-form' %>
      </div>

      <div class="form-body__field">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード (6文字以上) ", class: 'sign-form' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-body__field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in" ,class: 'btn btn-sign'%>
      </div>
    <% end %>
  </div>

  <div class="sign-link">
    <div class="signin-link">
      アカウントをお持ちでない方は<%= link_to "こちらから新規登録", new_user_registration_path, class: "link" %>してください
    </div>
    <div class="password">
      パスワードの再設定は<%= link_to "こちらから変更", new_user_password_path, class: "link" %>してください
    </div>
  </div>
  <div class="back">
    <%= link_to '<< 戻る', :back %>
  </div>
</div>