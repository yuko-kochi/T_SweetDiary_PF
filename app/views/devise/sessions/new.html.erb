<h2>ログイン</h2>

<%= form_with model: @user, url: user_session_path, local: true do |f| %>
  <div class="field signup-field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
  </div>

  <div class="field signup-field">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード (6文字以上) " %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
