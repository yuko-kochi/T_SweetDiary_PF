<h2>新規会員登録</h2>

<%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field signup-field">
    <%= f.text_field :name, autofocus: true, placeholder: "ニックネーム" %>
  </div>

  <div class="field signup-field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
  </div>

  <div class="field signup-field">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード (6文字以上) " %>
  </div>

  <div class="field signup-field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認" %>
  </div>

  <div class="actions signup-actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
