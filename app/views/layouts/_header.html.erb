<header>
  <div class="container-fluid">
    <div class="row">
      <nav class=" header navbar navbar-expand-lg navbar-dark col-12">
        <a class="navbar-brand" href="/" ><%= image_tag 'logo.jpg',  size: "30x30", class: "logo img-fluid" %></a>

        <% if user_signed_in? %>
          <li class="col2">
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
          </li>
          <li class="col2">
            <%= link_to "投稿一覧", posts_path %>
          </li>
          <li class="col2">
            <%= link_to "新規投稿", new_post_path %>
          </li>
        <% else %>
          <li class="col3">
            <%= link_to "新規登録", new_user_registration_path %>
          </li>
          <li class="col4">
            <%= link_to "ログイン", new_user_session_path %>
          </li>
        <% end %>
          <%= render 'layouts/search' %>
      </nav>
    </div>
  </div>
</header>